    "    heading=sense.get_heading()\n",
    "    #altdata=sense.get_accl()\n",
    "    #heading=get_tilt_heading(data, altdata)\n",
    "    angle=heading+dec+bearing-offset\n",
    "    angle = (angle+360)%360\n",
    "    #print(dec)\n",
    "    #print('check')\n",
    "    oled.clear()\n",
