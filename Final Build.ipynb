    "    r=requests.get(url)\n",
    "    decoded_content = r.content.decode('utf-8')\n",
    "    cr = csv.reader(decoded_content.splitlines(), delimiter=',')\n",
    "    my_list = list(cr)\n",
    "    for row in my_list:\n",
    "        lat= row[8:9]\n",
    "        long=row[9:10]\n",
    "    return float(long[0])"
   ]
